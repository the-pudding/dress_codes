<section class='create'>
  <h2 class='section__title tk-canela'>{{doc.createTitle}}</h2>
  <p class='prose tk-atlas'>{{doc.createIntro}}</p>
  <p class='prose__instructions tk-atlas'>{{doc.createInstructions}}</p>

  {{> story/createGrid }}

  <div class='create__button'>
    <button id='createFinish' type ='button'>{{doc.createFinish}}</button>
  </div>

  <div class='create__results'>
    <p class='result-pre tk-atlas'>{{{doc.resultProse}}}</p>
    <div class='create__results-overall'>
      <div class='create__results-gender result-group'>
        <p class='result result-gender tk-canela'>0%</p>
        <p class='result-prose tk-atlas'>{{{doc.resultGenderProse}}}</p>
      </div>
      <div class='create__results-race result-group'>
        <p class='result result-race tk-canela'>0%</p>
        <p class='result-prose tk-atlas'>{{{doc.resultRaceProse}}}</p>
      </div>
    </div>
  </div>

  <div class='create__button'>
    <button id='createCalc' type ='button'>{{doc.createCalc}}</button>
  </div>

  <p class='prose tk-atlas'>{{{doc.postCreate}}}</p>

<div class='container container__create' data-group='f'>
    <h4 class='chart-title tk-atlas'>{{{doc.femTitle}}}</h4>
    <h5 class='chart-subtitle tk-atlas'>{{{doc.femSubTitle}}}</h5>
    <div class='legend'>
      <div class='block'></div>
      <span class='legend-text tk-atlas'>{{{doc.blockLegend}}}</span>
    </div>
  </div>

