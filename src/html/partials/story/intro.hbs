<div class='intro'>
	<h1 class='intro__hed tk-canela'>{{doc.title}}</h1>
	<p class='intro__dek tk-atlas'>{{doc.dek}}</p>
	<div class='intro__info'>
		<p class='intro__byline tk-atlas'>{{{doc.author}}}</p>
		<p class='intro__date tk-atlas'>{{doc.date}}</p>
	</div>
	{{#each doc.intro}}
		<p class='prose tk-atlas'>{{{value}}}</p>
	{{/each}}

</div>
