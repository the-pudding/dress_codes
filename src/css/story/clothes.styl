.clothes

  .lockscreen__examples-clothes
    display flex
    flex-direction row
    flex-wrap wrap
    margin 0 auto;
    max-width $column-width
    padding 0 1rem
    justify-content: space-between;

    .lockscreen
      max-height auto
      margin 1rem 0.2rem 1rem 0


  .scroll
    position relative

    &-text
      position relative
      max-width 30rem
      margin 0 auto
      padding 1rem
      z-index 200
      .step-prose
        background-color rgba(white, 0.95)
        border 1px solid $gray
        border-radius 10px
        padding 1rem
        .girls, .boys
          padding 2px 6px
          border-radius 15px
          font-family $national
          text-transform uppercase

        .girls
          background-color: $primary
          color white
        .boys
          background-color $secondary
          color white
        .any
          background-color rgba(white, 1) !important

  .container__clothes
    display flex
    flex-direction column
    justify-content: center;
    position -webkit-sticky
    position sticky
    top 0
    bottom auto
    transform translate3d(0, 0, 0)
    z-index 100
    +mq('bp-6')
      top 25%

    .clothes__all
      margin 0 auto
      display flex
      flex-direction column-reverse
      align-items flex-start;
      +mq('bp-6')
        flex-direction row
        align-items: flex-end;

      .clothes__group
        margin 0 0.5rem
        display flex
        flex-direction column-reverse
        align-items: flex-start;
        justify-content:flex-start;
        min-height 2rem
        opacity 1
        transition 300ms ease-in-out
        +mq('bp-6')
          flex-direction column
          align-items center
          width 130px
          height auto
          margin 0 0.15rem
          justify-content: flex-end;
        &.is-dimmed
          opacity 0.3
          transition 300ms ease-in-out

      .clothes__only
        display flex
        flex-direction row
        flex-wrap wrap
        padding 0.25rem 0
        align-items center
        +mq('bp-6')
          padding 0
          justify-content: flex-start

      .clothes__item
        font-family $national
        set-type-size('small', true)
        width 111px
        margin 1px 0.25rem
        line-height 1
        padding 0.1rem 0.5rem
        border-radius 15px
        opacity 1
        transition 300ms ease-in-out
        +mq('bp-6')
          width auto
          margin 0
          line-height 1.5
          margin 1px 0.5rem
          text-align: left
        &.is-dimmed
          opacity 0.3
          transition 300ms ease-in-out

      // .items__market-f
      //   background-color: $primary
      //   color white
      //
      //
      // .items__market-m
      //   background-color $secondary
      //   color white
      //
      // .items__market-n
      //   background-color white

    .axis__group
      display flex
      flex-direction row
      align-items: baseline;
      margin 0 0 0.5rem 0
      min-width 75px
      border-bottom 1px solid lighten($gray-light, 5)
      +mq('bp-6')
        min-width 100px
        margin 0.5rem 0
        border-top 1px solid lighten($gray-light, 5)
        border-bottom none
        flex-direction column
        align-items center

      .axis__text
        text-align: center
        font-family $national
        font-weight bold
        color $gray
        margin-bottom 0
        margin-top 0.25rem
        font-size 14px

        &-sub
          font-family $national
          text-align: center;
          font-size 12px
          color $gray
          margin-top 0
          line-height 1
          margin-left 0.25rem
          +mq('bp-6')
            margin-left 0

    &-title
      max-width 60rem
      margin 0 auto
      .chart__title
        display none
        +mq('bp-6')
          display block
      .chart__subtitle-fullWidth
        font-family $national
        font-size 14px
        text-transform uppercase
        margin 0.5rem 0 0.5rem 0
        opacity 0
        transition 300ms ease-in-out;
        &.is-visible
          opacity 1
          transition 300ms ease-in-out
        +mq('bp-6')
          margin 0.5rem 0 2rem 0

        span
          margin 0 0.25rem
          line-height 1
          padding 0.1rem 0.6rem
          border-radius 10px
        .boys
          background-color: $secondary
          color white
        .girls
          background-color $primary
          color white
        .both
          background-color white

    .graphic__notes
      order 3
      max-width 60rem
      padding 1rem 1rem
      margin 2rem auto
      font-family $national
      background-color $off-gray
      border-top 1px solid $gray
      border-bottom 1px solid $gray
      &-title
        font-weight 700
        set-type-size('small')
        margin 0
        color $gray
      &-text
        set-type-size('small', true)
        line-height: 1.25
        margin 0.75rem 0
        color $gray
