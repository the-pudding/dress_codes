.explicit
  img
    max-width 600px
    margin 0 auto
  .percentage
    font-weight 600
    color $primary
  &__common

    h3
      text-align center
      font-weight 600

    .gender
      display flex
      flex-direction row
      width $column-width
      margin 0 auto

    .male, .female
      display flex
      flex-direction column
      margin 0 2rem

      .label
        text-align center
        font-weight 600
        margin-top 0

        &-female
          color $primary

        &-male
          color $secondary

    .grid
      display flex
      flex-wrap wrap
      justify-content: center;

    .grid__item
      display flex
      flex-direction column
      width 100px
      align-items: center;
      margin-bottom 1rem
      // padding 0.5rem

      &-icons
        position relative
        width 75px
        height 90px
        display flex
        justify-content: center;
        align-items: center

        svg
          position absolute
          transform scale(2.5)
          opacity 0

      &-img
        border-radius 10px
        order 0
        opacity 1
        transition 300ms
        position absolute

      &-name
        margin 0 auto
        text-align: center
        set-type-size('small', true)
        line-height 1.2
        order 1
        color $off-black
        transition 300ms

      &.disabled
        img
          opacity 0.15
          transition 300ms
        p
          color $gray
          transition 300ms
        svg
          opacity 0.9
          color $off-black
          transition 300ms
