.create
  max-width $column-width
  margin 0 auto
  &__grid
    display flex
    flex-wrap wrap
    justify-content: space-between;

    .grid__item
      display flex
      flex-direction column
      width 100px
      align-items: center;
      // padding 0.5rem

      &-icons
        position relative
        width 75px
        height 90px
        display flex
        justify-content: center;
        align-items: center

        svg
          position absolute
          transform scale(2.5)
          opacity 0

      &-img
        border-radius 10px
        order 0
        opacity 1
        transition 300ms
        position absolute

      &-name
        margin 0 auto
        text-align: center
        set-type-size('small', true)
        line-height 1.2
        order 1
        color $off-black
        transition 300ms

      &.disabled
        img
          opacity 0.15
          transition 300ms
        p
          color $gray
          transition 300ms
        svg
          opacity 0.9
          color $off-black
          transition 300ms

  &__button
    display flex
    align-items: center;

    #createFinish
      background-color $secondary
      padding 0.75rem 1rem
      color $primary
      font-weight 600
      text-transform uppercase
      margin 3rem auto

    #createCalc
      background-color $secondary
      padding 0.75rem 1rem
      color $primary
      font-weight 600
      text-transform uppercase
      margin 3rem auto

  &__results
    display flex
    flex-direction column
    align-items: center

    .create__results-overall
      display flex
      flex-direction row
      justify-content: space-between
      max-width $column-width

      .result-group
        max-width 20rem
        margin 0 4rem
        text-align: center

        .result
          margin 0
          set-type-size('xx-large', true)
          color $primary
          font-weight 600

        .result-prose
          margin 0
          set-type-size('medium', true)
.container__create
  .chart
    display flex
    flex-direction row
    align-items: flex-end
    margin-top: 2rem
  .hist-group
    display flex
    flex-direction column
    margin 0 1px
    .block
      background-color $primary
      margin-top 1px

    .hist-label
      set-type-size('small', true)
      color $gray

      &-five
        opacity 0

  .legend
    display flex
    flex-direction row
    align-items: center
    margin-top 1rem
    .block
      background-color $primary
      height 3px
      margin-right 0.25rem
    &-text
      set-type-size('small', true)
