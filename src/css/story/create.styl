.create__gender
  display flex
  flex-direction row
  height 350px
  align-items: flex-end;

.container__gender
  display flex
  flex-direction row
  max-width $column-width
  height 500px
.container__create
  width 50%
  .chart-title
    height 2rem
    margin 0 0 0.5rem 0
    text-align center
  &-f
    margin-right 0.5rem
    .chart-title
      color $primary
    .hist-group
      flex-direction row-reverse
    .block
      background-color $primary
  &-m
    margin-left 0.5rem
    .chart-title
      color $secondary
    .chart
      align-items flex-start
    .hist-group
      flex-direction row
    .block
      background-color $secondary

  .chart
    display flex
    flex-direction column
  .hist-group
    display flex
    margin 1px 0
    .block
      margin-right 1px


  &-axis
    margin-top 2.5rem
    .axis-label
      height 23px
      margin 2px 0
      display flex
      justify-content center

    .hist-label
      set-type-size('small', true)
      color $gray

      &-five
        opacity 0

  .legend
    display flex
    flex-direction row
    align-items: center
    margin-top 1rem
    .block
      background-color $primary
      height 3px
      margin-right 0.25rem
    &-text
      set-type-size('small', true)
