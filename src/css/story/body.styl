.body

  &__example
    max-width $column-width
    margin 0 auto
    display flex
    flex-direction row-reverse
    align-items: center;
  &__img-animation
    max-width 266px
  &__img-bodies
    max-width 600px
    margin 0 auto

  &__img-parts
    max-width 323px
    margin 0 auto

  &__load
    padding 15px 20px
    border 1px solid $gray
    background-color: white
    margin 2rem auto
    display block
    font-family: $national
    text-transform: uppercase;
    color $gray

  .container__bodyBar
    max-width $column-width
    //margin 0 auto
    padding 0 1rem

    .right
      display flex
      flex-direction column
      .bar__group
        display flex
        flex-direction row
        height 24px
        margin-bottom 0.25rem
        .bar__label
          background-color $gray-extraDark
          &-text
            color white
            font-family $national
            text-transform lowercase;
            margin 0
            font-size 14px
            padding 0 0.5rem
        &:first-of-type
          .bar__label
            border-radius 12px 0 0 0
        &:last-of-type
          .bar__label
            border-radius 0 0 0 12px
        .bar__bar
          background-color $primary
          border-radius 0 12px 12px 0
          &-text
            color white
            font-family $national
            text-transform lowercase;
            margin 0
            font-size 14px
            padding 0 0.5rem
            text-align right
            font-weight bold

    .bar
      fill $primary

    .label-text
      font-family $national
      set-type-size('medium')

    .label-text-bg
      font-family $national
      set-type-size('medium')
      stroke white
      stroke-width 2px
