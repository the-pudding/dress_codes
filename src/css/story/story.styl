/* CUSTOM STORY STYLE */
.section__title
  max-width $column-width
  margin 1rem auto
  padding 0 1rem

section
  margin-top 2rem

.prose__instructions
  max-width $column-width
  margin 1rem auto
  padding 0 1rem
  font-weight 600
  color $primary

.chart-title
  font-weight 600
  margin-bottom 0.25rem

.chart-subtitle
  set-type-size('small', true)
  color $gray
  margin-top 0.25rem

.bubble
  .chart
    height 900px
    width 1400px

  .label
    opacity 0
    pointer-events none

  .g-circle
    pointer-events: all;
    cursor: pointer;
    &.is-active

      .label
        opacity 1
      .label--bg
        opacity 1
        stroke-width 4px
        stroke white
